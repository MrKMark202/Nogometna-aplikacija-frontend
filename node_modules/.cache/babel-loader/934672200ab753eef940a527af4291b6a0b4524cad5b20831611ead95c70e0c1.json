 birthDate, pin, profilna) {\n      await setDoc(doc(db, \"Users\", email.toLowerCase()), {\n        Email: email,\n        Name: name,\n        Surname: surname,\n        Birthdate: birthDate,\n        PIN: pin,\n        Profilna: profilna,\n        AuthorisationType: \"USER\"\n      });\n    },\n    async signup() {\n      const email = this.email;\n      const password = this.password;\n      await createUserWithEmailAndPassword(auth, email, password).then(userCredential => {\n        alert(\"Uspješna registracija\");\n        const user = userCredential.user;\n        const name = this.name;\n        const surname = this.surname;\n        const birthDate = this.date;\n        const pin = this.pin;\n        const profilna = this.profilna;\n        this.saveAdditionalData(user, email, name, surname, birthDate, pin, profilna);\n        this.clearFormData();\n        this.postActionMoveToView();\n      }).catch(error => {\n        alert(\"Došlo je do pogreške\", error);\n      });\n    }\n  }\n};","map":{"version":3,"names":["doc","auth","db","setDoc","createUserWithEmailAndPassword","ref","getDownloadURL","name","components","data","agreement","valid","surname","email","profilnaURL","form","isLoading","password","pin","date","Date","now","getTimezoneOffset","toISOString","substr","menu","modal","menu2","rules","v","match","length","len","required","methods","clearFormData","birthDate","postActionMoveToView","$router","replace","path","UploadImageToStorage","storageRef","storage","currentUser","uploadBytes","$refs","PictureFile","files","then","snapshot","console","log","url","signup","catch","error","saveAdditionalData","user","profilna","toLowerCase","Email","Name","Surname","Birthdate","PIN","Profilna","AuthorisationType","userCredential","alert"],"sources":["src/views/Signup.vue"],"sourcesContent":["<template>\r\n\r\n    <div data-app>\r\n      <div class=\"naslov1\">\r\n        <h1>SignUp</h1>\r\n      </div>\r\n\r\n    <v-card\r\n      class=\"mx-auto\"\r\n   